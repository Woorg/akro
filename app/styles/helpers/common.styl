// Buttons

.button
	border none
	padding-top 15px
	padding-right 30px
	padding-bottom 17px
	padding-left 30px
	display inline-block
	vertical-align top
	background-color #00c6d7
	color #ffffff
	font-weight normal
	font-family $mB
	font-size 16px
	line-height 1
	text-align center
	text-decoration none
	tr(all .3s ease)
	&:hover
		background-color darken(#00c6d7, 10)
		tr(all .3s ease)
	&_sec
		border 2px solid #00c6d7
		padding-bottom 15px
		background transparent
		&:hover
			background-color #00c6d7

// Titles

.title
	font-size 64px
	font-family $mR
	color #fff
	text-transform uppercase
	letter-spacing 3px
	+r($tL)
		font-size 48px
	+r($m)
		font-size 24px

// wysiwyg editor styles

.wysiwyg
	p
		margin-bottom 28px
		font-size 18px
		line-height 1.6

	img
		max-width 100%
		height auto

.resp-image
	img
		max-width 100%
		height auto
