// Buttons

.button
	border none
	padding-top 15px
	padding-right 30px
	padding-bottom 15px
	padding-left 30px
	display inline-block
	vertical-align top
	background-color #00c6d7
	color #ffffff
	font-weight normal
	font-family $mB
	font-size 16px
	line-height 1
	text-align center
	text-decoration none
	tr(all .3s ease)
	&:hover
		background-color darken(#00c6d7, 10)
		tr(all .3s ease)
	&_sec
		border 2px solid #00c6d7
		background transparent
		&:hover
			background-color #00c6d7

// Titles

.title
	font-size 54px
	font-family $mR
	color #fff
	text-transform uppercase
	letter-spacing 3px
	+r($tL)
		font-size 45px
	+r($t)
		font-size 28px
	+r($m)
		font-size 24px

// wysiwyg editor styles

.wysiwyg
	p
		margin-bottom 30px
		line-height 1.428
		color #5a5a5a

	img
		max-width 100%
		height auto


.resp-image
	img
		max-width 100%
		height auto
