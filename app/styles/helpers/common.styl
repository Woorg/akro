// General body styles

.page
	background-color #000000
	font-display swap
	font-family $mR
	font-weight normal
	font-size 16px
	line-height 1.625
	color #5a5a5a
	&_inner
		.header
			position static

img
	display block
	max-width 100%
	height auto

// Container

.in
	margin auto
	padding-right 15px
	padding-left 15px
	min-width 280px
	max-width 1170px

// Links

// a:link
