.main
	display block
	+r($m)
		position relative
		z-index 0
	&__in
		@extends .in
		padding-top 30px
		// padding-bottom 63px
		padding-bottom 43px
		+r($tL)
			padding-top 46px
			padding-bottom 30px
		+r($m)
			padding-bottom 30px
	&__title
		@extends .title
		margin-bottom 50px
		letter-spacing 4px
		+r($tL)
			padding-left 32px
			padding-right 32px
		+r($m)
			padding-left 0
			padding-right 0
	&__w
		margin-top 44px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
		+r($m)
			margin-top (44px/2)
			margin-right -15px
			margin-left -15px

	&__content
		// margin-right 30px
		width 65.6%
		+r($tL)
			margin-bottom 30px
			width 100%
	&__sidebar
		margin-top -8px
		width 31.5%
		+r($tL)
			margin-top 0
			width 100%
		+r($m)
			display none

