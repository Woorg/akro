.nav
	max-width 600px
	display block
	&__list
		display flex
		flex-flow row wrap
		justify-content flex-start
	&__item
		margin-right 36px
		text-transform uppercase
		font-family $mB
		&:last-child
			margin-right 0
	.current-item
		.nav__link
			border-bottom 1px solid #00c6d7
	&__link
		padding-bottom 9px
		color #fff
		letter-spacing 1px
		text-decoration none
		tr(all .3s ease)
		&:hover
			color darken(#fff, 10)
			tr(all .3s ease)

.nav_sec
	.nav__item
		font-family $mR
