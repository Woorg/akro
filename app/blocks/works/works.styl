.works
	padding-bottom 100px
	display block
	overflow hidden
	+r($tL)
		padding-bottom 0
	&__in
		@extends .in
		padding-top 80px
	&__title
		@extends .title
		margin-bottom 40px
		+r($tL)
			padding-left 33px
			padding-right 33px
	&__grid
		width 100%
		clr()
	&__row
		overflow hidden
		clr()
	&__row-br
		.works__item_big
			float right
	&__sizer,
	&__item
		width 33.3%
		+r($tL)
			width 50%
	&__item
		position relative
		padding-top 20.1%
		float left
		background-position 50% 0
		background-size cover
		+r($tL)
			padding-top 35.8%
		&:hover
			.works__item-w
				visibility visible
				opacity 1
				tr(all .3s ease)
	&__item_big
		position relative
		padding-top 40.1%
		width 66.6%
		background-position 50% 0
		background-size cover
		+r($tL)
			padding-top 71.6%
			width 100%
	&__item-w
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		visibility hidden
		opacity 0
		color #fff
		background rgba(0,0,0, .6)
		tr(all .3s ease)
	&__item-top
		padding-top 27px
		padding-left 30px
		padding-right 30px
		display flex
		justify-content space-between
		align-items center
	&__category
		font-family $mB
	&__date
		color #888888
		text-transform uppercase
	&__item-body
		position absolute
		bottom 0
		left 0
		right 0
		padding-bottom 26px
		padding-left 30px
		padding-right 30px
	&__item-title
		margin-bottom 10px
		color #00c6d7
		font-size 18px
		font-family $mB
		letter-spacing 2px
		text-transform uppercase
	&__item-text
		font-size 18px
		line-height 1.3
	&__button
		position relative
		display block
		min-height 156px
		background url('../images/general/works-all.jpg') 50% 0 no-repeat
		background-size cover
		text-decoration none
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ''
			background rgba(0, 0, 0, .7)
	&__button-text
		position relative
		z-index 1
		@extends .in
		padding-top 60px
		padding-bottom 46px
		padding-left 64px
		color #fff
		font-family $mB
		font-size 36px
		line-height 1.555

.works_sec
	padding-bottom 0
	.works__item-big
		&:nth-child(1)
			float left
		&:nth-child(7)
			float right
