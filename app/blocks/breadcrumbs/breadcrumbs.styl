.breadcrumbs
	margin-bottom 12px
	color #fff
	&__list
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start
		// +r($m)
		// 	white-space nowrap
	&__item
		&:first-child
			.breadcrumbs__link
				padding-left 0
		&:nth-child(2)
			.breadcrumbs__link
				&:after
					display none

		&:last-child
			+r($m)
				display none
			.breadcrumbs__link
				padding-right 0
				&:after
					display none
	&__link
		position relative
		padding-left 13px
		padding-right 15px
		color #fff
		text-decoration none
		&:after
			position absolute
			top 0
			right 0
			content ''
			width 1px
			height 100%
			background #fff
