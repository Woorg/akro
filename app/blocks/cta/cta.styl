.cta
	position relative
	background url('../images/general/cta.jpg') 50% 0 / cover no-repeat
	&:after
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		content ''
		background rgba(0, 0, 0, .3)
	&__in
		position relative
		z-index 1
		@extends .in
		max-width 940px
		padding-top 100px
		padding-bottom 100px
		color #fff
	&__title
		@extends .title
		margin-bottom 43px
	&__text
		margin-bottom 30px
		font-size 18px
	&__form
		max-width 940px
