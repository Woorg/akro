.hero
	position relative
	z-index 0
	display block
	+r($m)
		height 738px
	&__slider
		color #fff
		display flex
		overflow hidden
		+r($m)
			line-height 1
	&__item
		position relative
		// height 100vh
		height 768px
		background-position 50% 0
		background-repeat no-repeat
		background-size cover
		line-height 1
		+r($tL)
			height 768px
		+r($m)
			height 738px
	&__in
		position relative
		@extends .in
		padding-top 300px
		height 100%
		+r($tL)
			// padding-top 227px
			padding-top 313px
		+r($m)
			padding-top 290px

	&__title
		@extends .title
		margin-top 33px
		margin-bottom 23px
		letter-spacing 4px
		line-height 1.4
		+r($tL)
			padding-left 33px
			padding-right 33px
		+r($m)
			margin-bottom 15px
			padding-left 0
			padding-right 0
			letter-spacing 1.13px
		span
			font-family $mB
	&__text
		margin-bottom 30px
		max-width 556px
		line-height 1.6
		+r($tL)
			padding-left 33px
			padding-right 33px
			max-width 70%
		+r($m)
			padding-left 0
			padding-right 0
			max-width 90%

	&__button
		+r($tL)
			margin-left 33px
		+r($m)
			margin-left 0

section.hero
	.hero__slider
		margin-bottom 0
	.hero__item
		background-position 50% 0
		background-repeat no-repeat
		background-size cover
	.slick-dots
		position absolute
		@extends .in
		z-index 1
		top 280px
		// left 30px
		left 50%
		bottom auto
		text-align left
		transform translateX(-50%)
		+r($tL)
			top 290px
			padding-left 57px
			padding-right 57px
		+r($m)
			top 280px
			padding-left 15px
			padding-right 15px
		li
			position relative
			padding-right 12px
			width auto
			height auto
			font-family $mB
			font-size 16px
			&:after
				position relative
				top 0
				right -12px
				content '/'
				color rgba(255, 255, 255, 0.3)
			&:first-child
				margin-left 0
			&:last-child
				&:after
					display none
		.slick-active
			a
				color #fff
				tr(all .3s ease)
		a
			color #00c6d7
			tr(all .3s ease)
