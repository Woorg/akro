.header
	position absolute
	z-index 2
	top 0
	left 0
	right 0
	display block
	&:after
		position absolute
		top 0
		left 0
		right 0
		content ''
		min-height 168px
		background-image linear-gradient(to top, rgba(0, 0, 0, 0) 0%, #000000 100%)

	&_mod
		z-index 3
		background #000
		min-height 486px
		.header__top
			border-bottom 1px solid #5A5A5A
		.header__bottom
			position relative
			z-index 1
			float right
			display block
			max-width 250px
			text-align right
			+r($m)
				position absolute
				top 430px
				left 0
				right 0
				border-top 1px solid #5A5A5A
				padding-left 15px
				padding-right 15px
				padding-bottom 50px
				max-width 100%
				background #000
				text-align left

		.header__phone
			margin-top 50px
			margin-bottom 20px
			margin-right 0
			display block
			+r($m)
				margin-top 30px
		.nav__trigger-open
			display none
		.nav__trigger-close
			display block
		.nav__item
			margin-bottom 20px
			max-width 200px
		.header__button
			display none
		.header__button_sec
			display inline-block
			vertical-align top
	&__in
		position relative
		z-index 1
		@extends .in
	&__top
		padding-top 43px
		padding-bottom 45px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		+r($tL)
			border-bottom 1px solid rgba(255,255,255, .7)
			// padding-left 24px
			padding-left 33px
			// padding-right 24px
			padding-right 0
		+r($m)
			margin-left auto
			margin-right auto
			padding-top 20px
			padding-bottom 20px
			padding-left 0
			justify-content space-between

	&__logo
		+r($m)
			position absolute
			top 28px
			left 50%
			transform translateX(-50%)
			// margin-right auto
			// margin-left auto

	&__nav
		max-width 598px
		+r($m)
			margin-left auto
		// 	position absolute
		// 	top 20px
		// 	right 15px
	&__bottom
		display flex
		flex-flow row wrap
		justify-content flex-end
		align-items center
		+r($tL)
			display none
	&__phone
		margin-right 30px

	&__button_sec
		display none

.phone
	font-family $mR
	font-size 24px
	color #FFF
	line-height 1
	text-decoration none
	&__icon
		margin-right 10px
		width 18px
		height 18px
		fill #fff




