.services
	display block
	&__in
		@extends .in
		border-top 1px solid #aaaaaa
		padding-top 100px
	&__title
		@extends .title
		margin-bottom 63px
	&__list
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start
		overflow hidden
	&__item
		width 33.3%
		height 460px
	&__link
		position relative
		height 100%
		display block
		background rgba(0, 0, 0, .7)
		color #fff
		text-decoration none
		tr(all .3s ease)
		&:hover
			background-color rgba(0, 150, 162, .7)
			tr(all .3s ease)
			.services__top
				border-bottom 1px solid #fff
				tr(all .3s ease)
	&__top
		position relative
		border-bottom 1px solid #767171
		margin-right 80px
		padding-top 56px
		tr(all .3s ease)
	&__num
		position absolute
		top 44px
		right -48px
		font-family $mL
		color #fff
	&__item-title
		margin-left 30px
		padding-top 120px
		font-size 36px
		color #FFF
	&__button
		position absolute
		border 1px solid #fff
		padding-top 16px
		padding-right 30px
		padding-bottom 9px
		padding-left 30px
		right 30px
		bottom 50px

	&__button-icon
		width 14px
		height 16px
		fill #ffd300
